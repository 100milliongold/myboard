<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.myapp.board.mapper.ReplyMapper">
	
	
	<select id="replyList" parameterType="hashmap" resultType="com.myapp.board.domain.ReplyVO">
		select * from  reply_${boardconfig.board_table} where bno = #{bno} and PARENT_ID IS NULL
	</select>
	
	<insert id="replyInsert" parameterType="hashmap">
        insert into reply_${boardconfig.board_table} (CNO,BNO,SUBJECT,CONTENT,REG_DATE)
            values
        (reply_${boardconfig.board_table}_sequence.nextval,#{bno},#{reply.subject},#{reply.content},SYSDATE)
    </insert>
	
</mapper>